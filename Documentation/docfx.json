{
  "metadata": [
    {
      "src": [
        {
          "src": "../../",
          "files": [
            "DBFacade.Net/DBFacade/**.csproj"
          ],
          "cwd": "../../",
          "exclude": [
            "**/obj/**",
            "**/bin/**"
          ]
        }
      ],
      "dest": "obj/api"
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "api/**.yml"
        ],
        "cwd": "obj"
      },
      {
        "files": [
          "api/*.md",
          "articles/**.md",
          "toc.yml",
          "*.md"
        ],
        "exclude": [
          "obj/**",
          "_site/**"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**"
        ],
        "exclude": [
          "obj/**",
          "_site/**"
        ],
        "dest": "resources"
      }
    ],
    "overwrite": [
      {
        "files": [
          "apidoc/**.md"
        ],
        "exclude": [
          "obj/**",
          "_site/**"
        ]
      }
    ],
    "globalMetadata": {
      "_appTitle": "DbFacade",
      "_appLogoPath": "resources/images/logo.jpg",
      "_appFooter": "Copyright © JSystemsTech 2021"
    },
    "dest": "_site",
    "template": [ "templates/custom_default", "templates/material" ]
  }
}